%% -*- mode: erlang -*-
%% ex: ft=erlang
{sys, [
    {lib_dirs, []},
    {erts, [{mod_cond, derived}, {app_file, strip}]},
    {app_file, strip},
%%     {excl_lib, otp_root},
    {rel, "wechat_mud", "0.1.0",
        [
            kernel,
            stdlib,
            sasl,
            wechat_mud
        ]},
    {rel, "start_clean", "",
        [
            kernel,
            stdlib
        ]},
    {boot_rel, "wechat_mud"},
    {profile, embedded},
    {incl_cond, derived},
    {excl_archive_filters, [".*"]}, %% Do not archive built libs
    {excl_sys_filters, ["^bin/(?!start_clean.boot)",
        "^erts.*/bin/(dialyzer|typer)",
        "^erts.*/(doc|info|include|lib|man|src)"]},
    {excl_app_filters, ["\.gitignore"]},
    {app, cowboy, [{incl_cond, include}, {lib_dir, "../deps/cowboy"}]},
    {app, cowlib, [{incl_cond, include}, {lib_dir, "../deps/cowlib"}]},
    {app, ranch, [{incl_cond, include}, {lib_dir, "../deps/ranch"}]},
    {app, ecsv, [{incl_cond, include}, {lib_dir, "../deps/ecsv"}]},
    {app, eredis, [{incl_cond, include}, {lib_dir, "../deps/eredis"}]},
    {app, erlsom, [{incl_cond, include}, {lib_dir, "../deps/erlsom"}]},
    {app, wechat_mud, [{mod_cond, app}, {incl_cond, include}, {lib_dir, ".."}]}
]}.

{target_dir, "wechat_mud"}.

{overlay, [
    {mkdir, "log/sasl"},
    {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy, "files/nodetool", "releases/\{\{rel_vsn\}\}/nodetool"},
    {copy, "wechat_mud/bin/start_clean.boot", "\{\{erts_vsn\}\}/bin/start_clean.boot"},
    {copy, "files/wechat_mud", "bin/wechat_mud"},
    {copy, "files/wechat_mud.cmd", "bin/wechat_mud.cmd"},
    {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},

    %% Following line may be safely removed in new projects
    {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
    {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
    {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"},

    %% Copy runtime files
    {copy, "../runtime_files", "runtime_files"}
]}.